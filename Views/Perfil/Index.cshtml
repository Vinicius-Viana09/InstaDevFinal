@model Usuario
@{
    ViewData["Title"] = "Perfil";
    Usuario batata = new Usuario();
    ViewBag.PostPerfil.Reverse();
    Usuario User = batata.ULogado(ViewBag.User);
}

@* @foreach (var item in ViewBag.PostPerfil)
{
 *@
    <section class="container_perfil">
        <div class="box_perfil">
            <div class="img_perfil">
                <a asp-area="" asp-controller="Perfil" asp-action="Index"><i class="fas fa-user-circle"></i></a>
            </div>

            <div class="box_info">
                <h1 class="username">@User.Username</h1>
                <div class="box_info_perfil">
                    <span>0 Publicações</span>
                    <span>128 Seguindo</span>
                    <span>214 Seguidores</span>
                </div>
                <div class="box_sair">
                    <span class="nome_usuario_perfil">@User.Nome</span>
                    <a asp-area="" asp-controller="Alterar" asp-action="Index">Editar Perfil</a>
                    <a asp-area="" asp-controller="Home" asp-action="Logout">Sair</a>
                </div>
            </div>
        </div>
    </section>

    <div class="linha">
        <hr class="linha2">
    </div>

    <div class="publi">
        <img src="~/assets/publicacoes.png" alt="">
        <span>Publicações</span>
    </div>


    <section class="container_post">
        <div class="box_post_organizacao">
            @if (ViewBag.Posts != null)
            {
                @foreach (var coisa in ViewBag.Posts)
                {

                    <img src="@coisa.imagem" alt="Foto do Post">
                    <div class="box_post">
                        <div class="box_info_posts">
                            <div class="box_info_postagem">
                                <img src="~/assets/thank-you 4.png" alt="Imagem de Perfil">
                                <div class="box_local_post">
                                    <span class="nome_usuario">@User.Nome</span>
                                    <span class="localizacao">Rio de Janeiro</span>
                                </div>
                            </div>
                            <div class="deletar">
                                <a asp-area="" asp-controller="Perfil" asp-action="Excluir"><i class="fas fa-trash"></i></a>
                            </div>
                        </div>
                        <div class="box_curtir">
                            <img src="~/assets/like.png" alt="Like">
                            <img src="~/assets/comentario.png" alt="Comentarios">
                        </div>

                        <div class="box_texto_post">
                            <span class="nome_usuario_comentario">@User.Username</span>
                            <p class="comentario">@coisa.texto_post</p>
                        </div>

                        <span class="contador_curtidas">1954 Curtidas</span>

                        <div class="box_comentario">
                            <div class="ajustar_tamanho_comentario">
                                <span class="nome_usuario_comentario">fausto_silva</span>
                                <span class="comentario">Esse cara é fera bixo!!</span>
                                <img src="~/assets/like.png" alt="Like">
                            </div>
                            <div class="ajustar_tamanho_comentario">
                                <span class="nome_usuario_comentario">yes_baby</span>
                                <span class="comentario">thank you</span>
                                <img src="~/assets/like.png" alt="Like">
                            </div>
                            <div class="ajustar_tamanho_comentario">
                                <span class="nome_usuario_comentario">adriano_stark</span>
                                <span class="comentario">Quando eu adormecer vou sonhar com você. É sempre você</span>
                                <img src="~/assets/like.png" alt="Like">
                            </div>
                            <div class="ajustar_tamanho_comentario">
                                <span class="nome_usuario_comentario">yes_baby</span>
                                <span class="comentario">Yes baby!!</span>
                                <img src="~/assets/like.png" alt="Like">
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <span class="box_sem_publi">Esse perfil ainda não fez nenhuma publicação</span>
            }
        </div>
    </section>
@* } *@
